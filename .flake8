[flake8]
max-line-length = 88
extend-ignore = E203, E402
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    alembic/versions
per-file-ignores =
    __init__.py:F401
    tests/*:S101,S105,S106,S107,F401
    alembic/env.py:F401,E402
